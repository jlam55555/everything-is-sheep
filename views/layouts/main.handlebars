<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="A blog by Juliet and Jonathan Lam">
    <meta name="author" content="Jonathan Lam <jlam55555@gmail.com>">
    <meta name="keywords" content="everything is sheep, sheep, jonathan lam, juliet lam">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="/res/main.js"></script>
    <link rel="stylesheet" href="/res/mobile.css">
    <link rel="stylesheet" href="/res/desktop.css" media="all and (min-width: 1024px)">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700">
    <link rel="icon" type="img/x-icon" href="/res/favicon.ico">
    <link rel="apple-touch-icon" href="/res/img/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="EiS" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <title>Everything is Sheep{{#if title}}: {{title}}{{/if}}{{#if name}}: {{name}}{{/if}}</title>
  </head>
  <body>
    <div id="sidebar">
      <div id="titleBar">
        <a href="/" class="center" id="title"><span id="desktopTitle">Everything<br>is Sheep<br><span class="date">A playground for free-form teenage writing</span></span><span id="mobileTitle"><img id="condensedLogo" src="/res/img/logo-condensed.png"> EiS</span></a>
        <div id="menuButton"></div>
      </div>
      <a href="/" class="navLink">Return home</a>
      <a href="/posts" class="navLink">View all posts</a>
      <a href="/authors" class="navLink">View all authors</a>
      <!--<a href="/" class="imgLink"><img id="logo" src="/res/img/logo.png"></a>-->
      <div id="postList" class="sidebarList">
        <input type="text" id="sidebarSearchInput" placeholder="Search Posts">
        <div id="searchHint" class="date">Press <kbd>Enter</kbd> to search</div>
        {{#each (limitedPostList)}}
          <div><a href="/posts/{{filename}}">{{title}}</a> <span class="date">{{date}}</span></div> 
        {{/each}}
        <div>
          <a class="date" href="/posts">View all posts</a><br>
          <a class="date" href="/authors">View authors</a><br>
          <a class="date" href="/feed.xml">Subscribe to RSS feed</a>
        </div>
      </div>
      <!--<div id="authorList" class="sidebarList">
        <h2>Authors</h2>
        {{#each authorList}}
          <div><a href="/authors/{{filename}}">{{name}}</a></div>
        {{/each}}
      </div>
      -->
    </div>
    <div id="content">
      {{{ body }}}
    </div>
  </body>
</html>
