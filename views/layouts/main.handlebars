<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/res/style.css">
    <title>Everything is Sheep</title>
  </head>
  <body>
    <div id="sidebar">
      <a href="/">Home</a>
      <p>Posts</p>
      <ul>
        {{#each postList}}
          <li><a href="/posts/{{filename}}">{{title}}</a></li> 
        {{/each}}
      </ul>
      <p>Authors</p>
      <ul>
        {{#each authorList}}
          <li><a href="/authors/{{filename}}">{{name}}</a></li>
        {{/each}}
      </ul>
    </div>
    <div id="content">
      {{{ body }}}
    </div>
  </body>
</html>
